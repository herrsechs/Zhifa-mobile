<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/launcher"
        android:layout_alignBottom="@+id/register_username_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:id="@+id/imageView4" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="155dp"
        android:hint="用户名"
        android:id="@+id/register_username_input"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/register_password_input"
        android:hint="密码"
        android:layout_below="@+id/register_username_input"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/register_confirm_pwd"
        android:hint="重复密码"
        android:layout_below="@+id/register_password_input"
        android:layout_alignStart="@+id/register_password_input" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/register_role_spinner"
        android:entries="@array/role_entry"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_below="@+id/register_confirm_pwd"
        android:layout_alignStart="@+id/register_confirm_pwd" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/register_gender_spinner"
        android:entries="@array/gender_entry"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_role_spinner"
        android:layout_alignStart="@+id/register_role_spinner" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/register_haircut_spinner"
        android:entries="@array/hair_entry"
        android:layout_below="@+id/register_gender_spinner"
        android:layout_alignStart="@+id/register_gender_spinner"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="清空"
        android:id="@+id/register_clear_btn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_haircut_spinner"
        android:layout_alignStart="@+id/register_confirm_pwd" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="提交"
        android:id="@+id/register_submit_btn"
        android:layout_alignTop="@+id/register_clear_btn"
        android:layout_alignEnd="@+id/register_confirm_pwd" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="角色"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/register_role_spinner"
        android:layout_alignStart="@+id/register_confirm_pwd" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/register_gender_spinner"
        android:layout_alignStart="@+id/register_clear_btn" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="发长"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/register_haircut_spinner"
        android:layout_alignStart="@+id/register_clear_btn" />

</RelativeLayout>